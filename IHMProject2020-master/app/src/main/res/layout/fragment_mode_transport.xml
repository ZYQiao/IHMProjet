<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/mode_pieton_button"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_below="@+id/mode_passager_button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:background="#FFFFFF"
        android:drawableStart="@drawable/ic_directions_walk_black_24dp"
        android:text="PiÃ©ton"
        android:textAlignment="viewStart"
        android:textSize="20sp" />

    <Button
        android:id="@+id/mode_cycliste_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/mode_motard_button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:background="#FFFFFF"
        android:drawableStart="@drawable/ic_directions_bike_black_24dp"
        android:text=" Cycliste"
        android:textAlignment="viewStart"
        android:textSize="20sp" />

    <Button
        android:id="@+id/mode_motard_button"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_below="@+id/close_mode_transport"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="3dp"
        android:background="#FFFFFF"
        android:drawableStart="@drawable/ic_motorcycle_black_24dp"
        android:text="  Motard"
        android:textAlignment="viewStart"
        android:textSize="20sp" />

    <Button
        android:id="@+id/close_mode_transport"
        android:layout_width="119dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="3dp"
        android:drawableStart="@drawable/ic_arrow_back_black_24dp"
        android:text="Retour" />

    <Button
        android:id="@+id/mode_passager_button"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_below="@+id/mode_cycliste_button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:background="#FFFFFF"
        android:drawableStart="@drawable/ic_local_taxi_black_24dp"
        android:text=" Passager"
        android:textAlignment="viewStart"
        android:textSize="20sp" />

    <Button
        android:id="@+id/mode_automobiliste_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/mode_bus_button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:background="#FFFFFF"
        android:drawableStart="@drawable/ic_directions_car_black_24dp"
        android:text="  Automobiliste"
        android:textAlignment="viewStart"
        android:textSize="20sp" />

    <Button
        android:id="@+id/mode_bus_button"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_below="@+id/mode_pieton_button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:background="#FFFFFF"
        android:drawableStart="@drawable/ic_directions_bus_black_24dp"
        android:text="  Bus"
        android:textAlignment="viewStart"
        android:textSize="20sp" />
</RelativeLayout>